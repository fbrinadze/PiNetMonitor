# Network Monitor Configuration
# Copy this file to .env and adjust values as needed

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Network Configuration
# Subnet to scan (without the last octet, e.g., 192.168.1 for 192.168.1.x)
SUBNET=192.168.1

# Scan interval in milliseconds (default: 5 minutes)
SCAN_INTERVAL=300000

# Status check interval in milliseconds (default: 30 seconds)
STATUS_CHECK_INTERVAL=30000

# Traffic update interval in milliseconds (default: 1 second)
TRAFFIC_UPDATE_INTERVAL=1000

# Health check interval in milliseconds (default: 60 seconds)
HEALTH_CHECK_INTERVAL=60000

# Data Storage
# Directory for storing persistent data (default: ~/.network-monitor)
DATA_DIR=~/.network-monitor

# Data retention period in hours (default: 24 hours)
DATA_RETENTION_HOURS=24

# Logging Configuration
# Log level: error, warn, info, debug (default: info)
LOG_LEVEL=info

# Log directory (default: ./logs in development, /var/log/network-monitor in production)
LOG_DIR=./logs

# Performance Configuration
# Maximum number of concurrent ping operations (default: 10)
MAX_CONCURRENT_PINGS=10

# Ping timeout in milliseconds (default: 5 seconds)
PING_TIMEOUT=5000

# Number of ping packets to send for health checks (default: 10)
PING_COUNT=10

# Network interface to monitor for traffic (default: auto-detect)
# NETWORK_INTERFACE=eth0

# WebSocket Configuration
# WebSocket ping interval in milliseconds (default: 30 seconds)
WS_PING_INTERVAL=30000

# WebSocket ping timeout in milliseconds (default: 5 seconds)
WS_PING_TIMEOUT=5000

# API Configuration
# Enable CORS (default: false)
ENABLE_CORS=false

# Allowed CORS origins (comma-separated, only used if ENABLE_CORS=true)
# CORS_ORIGINS=http://localhost:3001,http://192.168.1.100:3000

# Request rate limiting (requests per minute, default: 100)
RATE_LIMIT=100

# Security Configuration
# Enable basic authentication (default: false)
ENABLE_AUTH=false

# Basic auth username (only used if ENABLE_AUTH=true)
# AUTH_USERNAME=admin

# Basic auth password (only used if ENABLE_AUTH=true)
# AUTH_PASSWORD=changeme

# Development Configuration
# Enable debug mode (default: false)
DEBUG=false

# Mock network operations for testing (default: false)
MOCK_NETWORK=false
