# Network Monitor Configuration

# Server Configuration
PORT=3000
NODE_ENV=production

# Network Configuration
SUBNET=192.168.1
NETWORK_INTERFACE=eth0

# Monitoring Intervals (in milliseconds)
SCAN_INTERVAL=300000          # 5 minutes
CLEANUP_INTERVAL=3600000      # 1 hour
DATA_RETENTION_PERIOD=86400000 # 24 hours

# Status Monitor Configuration
STATUS_CHECK_INTERVAL=30000   # 30 seconds

# Health Monitor Configuration
HEALTH_CHECK_INTERVAL=60000   # 60 seconds
HEALTH_PING_COUNT=10

# Traffic Analyzer Configuration
TRAFFIC_UPDATE_INTERVAL=1000  # 1 second
TRAFFIC_HISTORY_GRANULARITY=60000 # 1 minute

# Data Storage
DATA_DIR=~/.network-monitor

# Logging
LOG_LEVEL=info
LOG_DIR=/var/log/network-monitor
